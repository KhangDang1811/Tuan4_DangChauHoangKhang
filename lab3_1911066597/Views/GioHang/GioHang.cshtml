@model IEnumerable<lab3_1911066597.Models.GioHang>

@{ ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Giỏ hàng</h2>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.ten) </th>
        <th>@Html.DisplayNameFor(model => model.hinh) </th>
        <th>@Html.DisplayNameFor(model => model.gia)</th>
        <th>@Html.DisplayNameFor(model => model.soluong) </th>
        <th>@Html.DisplayNameFor(model => model.Thanhtien) </th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td> @Html.DisplayFor(modelItem => item.ten) </td>
    <td> <img src="@item.hinh" width="180" /> </td>
    @using (Html.BeginForm("CapnhatGioHang", "GioHang", new { @id = item.maloai }))
    {
<td> @String.Format("{0:0,0}", item.gia) VND </td>
                    <td> <input type="number" min="1" name="txtSoLg" value="@item.soluong" /> </td>
                                        <td> @Html.DisplayFor(modelItem => item.Thanhtien)</td>
                                                            <td>
                                                                <a href="@Url.Action("Detail", "Sach", new { id = item.maloai })">Chi tiết</a> | @Html.ActionLink("Xóa", "XoaGioHang", new { @id = item.maloai })
                                                            </td>
                                                                                <td><input type="submit" value="Cập nhật" class="btn btn-success" /></td>
}
</tr>
}
    <tr style="font-weight: bold; text-align: left; color:red">
        <td colspan="2"> Số loại sách: @ViewBag.Tongsoluongsanpham </td>
        <td colspan="2"> Số lượng sách:@ViewBag.Tongsoluong </td>
        <td colspan="4"> Tổng tiền: @String.Format("{0:0,0}", @ViewBag.Tongtien) | VND </td>
    </tr>
    <tr style="font-weight:bold; color: blue; text-align:right">
        <td colspan="5">
            @Html.ActionLink("Xóa giỏ hàng", "XoaTatCasioHang")
        </td>
    </tr>
    <tr style="font-weight:bold; color:yellow; text-align:right">
        <td colspan="5">
            @Html.ActionLink("Đặt hàng", "Dathang", "GioHang")
        </td>
    </tr>
</table>




